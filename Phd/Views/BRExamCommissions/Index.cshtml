@model IEnumerable<Phd.Models.BRExamCommission>

@{
    ViewData["Title"] = "Список ГАК";
}

<h2>Список ГАК</h2>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Создать коммиссию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BMajor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BMajor.Id)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Править</a> |
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@item.Id">Удалить</a> |
                <a class="btn btn-sm btn-primary" asp-controller="BMajors" asp-action="CreateBRStudentGroups" asp-route-id="@item.Id">Создать поток</a> |
                <a class="btn btn-sm btn-primary" asp-controller="BMajors" asp-action="GetBRStudentGroups" asp-route-id="@item.Id">Смотреть потоки</a>
            </td>
        </tr>
}
    </tbody>
</table>
