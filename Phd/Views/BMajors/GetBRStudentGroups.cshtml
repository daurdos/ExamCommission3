@model IEnumerable<Phd.Models.BRStudentGroup>

@{
    ViewData["Title"] = "Просмотр потоков ГАК";
}

<h2>Потоки ГАК</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BRExamCommission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BRExamCommission.Id)
            </td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="CreateBRStudent" asp-route-id="@item.Id">Добавить студента</a> |
                <a class="btn btn-sm btn-primary" asp-action="GetBRStudents" asp-route-id="@item.Id">Просмотр студентов</a>
            </td>
        </tr>
}
    </tbody>
</table>
